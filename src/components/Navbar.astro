---
import NavItem, { type Props as NavItemProps } from "./NavItem.astro";

const routes: NavItemProps[] = [
  {
    href: "/",
    name: "home",
  },
  {
    href: "/resume.pdf",
    name: "resume",
    target: "_blank",
  },
  {
    href: "/blog",
    name: "blog",
  },
];
---

<aside class="-ml-[8px] mb-16 tracking-tight">
  <div class="lg:sticky lg:top-20">
    <nav
      class="flex flex-row items-start relative px-0 pb-0 fade md:overflow-auto scroll-pr-6 md:relative"
    >
      <div class="flex flex-row space-x-0 pr-10">
        {
          routes.map((route) => (
            <NavItem
              name={route.name}
              href={route.href}
              target={route.target}
            />
          ))
        }
      </div>
    </nav>
  </div>
</aside>
